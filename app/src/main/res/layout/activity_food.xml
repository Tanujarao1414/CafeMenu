<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food"
    tools:context=".Food">

    <Button
        android:id="@+id/fries"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="70dp"
        android:text="Fries"
        app:layout_constraintBottom_toTopOf="@+id/burger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/burger"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:layout_marginBottom="71dp"
        android:text="Burger"
        app:layout_constraintBottom_toTopOf="@+id/sandwich"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fries" />

    <Button
        android:id="@+id/sandwich"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:layout_marginBottom="251dp"
        android:text="Sandwich"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burger" />
</androidx.constraintlayout.widget.ConstraintLayout>